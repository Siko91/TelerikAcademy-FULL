<Application
    x:Class="BunnyEscape.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:BunnyEscape.Converters"
    xmlns:local="using:BunnyEscape">

    <Application.Resources>
        <conv:BoolToVisibilityConverter x:Key="boolToVisibilityConverter"></conv:BoolToVisibilityConverter>
        <conv:PathToBrushConverter x:Key="pathToBrushConverter"></conv:PathToBrushConverter>
        <conv:ScreenPercentToHeightConverter x:Key="percentToHeightConverter"></conv:ScreenPercentToHeightConverter>
        <conv:ScreenPercentToWidthConverter x:Key="percentToWidthConverter"></conv:ScreenPercentToWidthConverter>
    </Application.Resources>

</Application>

